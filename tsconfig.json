{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "rootDir": "src",
    "baseUrl": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "@types",
      "typed-bitwig-api"
    ]
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}